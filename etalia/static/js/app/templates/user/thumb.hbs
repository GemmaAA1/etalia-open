{{user_avatar this}}
<div class="user-card">
    <p class="user-name">{{user_full_name this}}</p>
    <p class="user-affiliation">{{user_affiliation this}}</p>
    <p class="user-actions">
        <a href="javascript: void(0)" class="user-profile">View profile</a>
        {{#unless current}}
            {{#if followed}}
            <a href="javascript: void(0)" class="user-unfollow">- Followed</a>
            {{else}}
            <a href="javascript: void(0)" class="user-follow">+ Follow</a>
            {{/if}}
        {{/unless}}
    </p>
</div>
